<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mainColor</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="translate" parent="@android:style/Animation.Activity"> 
               <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>  
               <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>  
               <item name="android:activityCloseEnterAnimation">@anim/slide_in_right</item>  
        <item name="android:activityCloseExitAnimation">@anim/slide_out_left</item>
    </style>

    <!--应用启动页主题-->
    <style name="AppTheme.StartingWindowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_launcher</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/splash_top_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="TitleView">
        <attr name="title" format="string" />
        <attr name="showBack" format="boolean" />
        <attr name="showRight" format="boolean" />
        <attr name="srcBack" format="reference" />
        <attr name="srcRight" format="reference" />
        <attr name="bgColor" format="reference" />
    </declare-styleable>

    <style name="customEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/hint_color</item>
        <item name="colorControlActivated">@color/pressed</item>
    </style>

    <!--设置TabLayout字体大小-->
    <style name="TabLayoutTextSize">
        <item name="android:textSize">18sp</item>
    </style>
    <!--设置TabLayout字体加粗-->
    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sub</item>
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="text_subhead_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/text_subhead</item>
    </style>

    <style name="lineH">
        <item name="android:background">#eaeaea</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">#313131</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">39dp</item>
        <item name="android:paddingTop">61dp</item>
    </style>
</resources>
