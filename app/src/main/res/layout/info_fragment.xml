<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.gy.musicgame.view.TitleView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showBack="false"
            app:showRight="false"
            app:title="@string/info" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="300dp"
            android:layout_height="@dimen/btn_height"
            app:tabIndicatorColor="@color/pressed"
            app:tabMinWidth="@dimen/btn_height"
            app:tabIndicatorFullWidth="false"
            app:tabSelectedTextColor="@color/pressed"
            app:tabTextColor="@color/normal" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <com.example.gy.musicgame.view.BottomBarView
            android:id="@+id/bottom_bar_view"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>
</FrameLayout>