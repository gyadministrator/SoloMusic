<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        android:background="#f3f3f3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAudio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_audio" />


        <EditText
            android:id="@+id/et_content"
            tools:ignore="RtlSymmetry,SmallSp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/message_shap_chat_bg"
            android:maxLines="3"
            android:minHeight="36dp"
            android:paddingStart="13dp"
            android:paddingLeft="13dp"
            android:textSize="11sp"
            android:visibility="visible" />

        <com.android.chat.ui.widget.RecordButton
            android:id="@+id/btnAudio"
            style="?android:attr/borderlessButtonStyle"
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_session_btn_voice"
            android:text="按住说话"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivEmo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_emoji" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:src="@mipmap/ic_add" />

        <com.android.chat.ui.widget.StateButton
            android:id="@+id/btn_send"
            app:normalBackgroundColor="#127CD6"
            app:pressedBackgroundColor="#0f519b"
            app:radius="5dp"
            tools:ignore="HardcodedText"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:padding="1dp"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>